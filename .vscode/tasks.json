{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean target",
            "command": "/bin/sh",
            "args": [
                "-c",
                "rm -Rf target"
            ],
            "type": "shell"
        },
        {
            "label": "Build dummy code for x86",
            "command": "/bin/sh",
            "args": [
                "-c",
                "mkdir -p target && ./btpc64macOS < dummy.pas > target/dummyX86Exec && chmod +x target/dummyX86Exec"
            ],
            "type": "shell",
            "dependsOn": [
                "Clean target"
            ]
        },
        {
            "label": "Run dummy code built for x86",
            "command": "/bin/sh",
            "args": [
                "-c",
                "target/dummyX86Exec"
            ],
            "type": "shell",
            "dependsOn": [
                "Build dummy code for x86"
            ]
        },
        {
            "label": "Disassemble dummy code built for x86 (full)",
            "command": "/bin/sh",
            "args": [
                "-c",
                "otool -tvV target/dummyX86Exec > target/dummyX86Exec.full.asm"
            ],
            "type": "shell",
            "dependsOn": [
                "Build dummy code for x86"
            ]
        },
        {
            "label": "Disassemble dummy code built for x86 (short)",
            "command": "/bin/sh",
            "args": [
                "-c",
                "cat target/dummyX86Exec.full.asm | sed -n '/^ProgramEntryPoint:$/,$p' > target/dummyX86Exec.short.asm"
            ],
            "dependsOn": [
                "Disassemble dummy code built for x86 (full)"
            ],
            "problemMatcher": []
        },
        {
            "label": "Print opcodes",
            "command": "/bin/sh",
            "args": [
                "-c",
                "mkdir -p target && ./btpc64macOS < btpc64macOSDebug.pas > target/btpc64macOSDebug && chmod +x target/btpc64macOSDebug && ./target/btpc64macOSDebug < dummy.pas > target/dummyExec.opcodes.txt"
            ],
            "dependsOn": [
                "Clean target"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build compiler for aarch64",
            "command": "/bin/sh",
            "args": [
                "-c",
                "mkdir -p target && ./btpc64macOS < btpc64macOS.pas > target/btpc64macosaarch64 && chmod +x target/btpc64macosaarch64"
            ],
            "dependsOn": [
                "Clean target"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build dummy code for aarch64",
            "command": "/bin/sh",
            "args": [
                "-c",
                "./target/btpc64macosaarch64 < dummy.pas > target/dummyAarch64Exec"
            ],
            "dependsOn": [
                "Build compiler for aarch64"
            ],
            "problemMatcher": []
        },
        {
            "label": "Disassemble dummy code built for aarch64",
            "command": "/bin/sh",
            "args": [
                "-c",
                "objdump -d target/dummyAarch64Exec > target/dummyAarch64Exec.asm"
            ],
            "type": "shell",
            "dependsOn": [
                "Build dummy code for aarch64"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build rtl64macOS binary",
            "command": "/bin/sh",
            "args": [
                "-c",
                "mkdir -p target && cd rtl2pas && as rtl64macOS.s -o ../target/rtl64macOS.o && ld -o ../target/rtl64macOS ../target/rtl64macOS.o -no_compact_unwind"
            ],
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "Build rtl2pas",
            "command": "/bin/sh",
            "args": [
                "-c",
                "mkdir -p target && cd rtl2pas && g++ main.cpp -o ../target/rtl2pas"
            ],
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "Generate stub.txt using rtl2pas",
            "command": "/bin/sh",
            "args": [
                "-c",
                "cd target && ./rtl2pas"
            ],
            "type": "shell",
            "dependsOn": [
                "Build rtl64macOS binary",
                "Build rtl2pas"
            ],
            "problemMatcher": []
        },
        // rtl64macOS
        //  cd "/Users/assistentka_professora/Desktop/A-Bauman-BTPC-macOS-Arm64/rtl2pas/" && g++ main.cpp -o main && "/Users/assistentka_professora/Desktop/A-Bauman-BTPC-macOS-Arm64/rtl2pas/"main
    ]
}